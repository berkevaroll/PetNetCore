@model IEnumerable<PetNetCore.Models.BlogPostDto.List>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<h2>Blogs</h2>

@foreach (var item in Model)
{
    <div class="col-lg-12 col-sm-3 portfolio-item">
        <div class="card h-100">
            <a href="#"><img class="card-img-top" src="~/images/@item.Photo" alt=""></a>
            <div class="card-body">
                <h3>
                    <td>
                        @Html.DisplayFor(modelItem => item.BlogTitle)
                    </td>
                </h3>
                <hr />
                <p> <b>Publisher : </b>@Html.DisplayFor(modelItem => item.Username)</p>
                <hr />
                <p> <b>Content :  </b> @Html.DisplayFor(modelItem => item.BlogContent)</p>


            </div>
        </div>
    </div>
}
